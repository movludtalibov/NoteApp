<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/loginSignUpScreenBackground"
    tools:context=".LoginScreen">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/loginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Login"
        android:textColor="@color/white"
        android:layout_marginTop="150dp"
        android:textSize="36sp"
        app:fontFamily="@font/lato_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    </com.google.android.material.textview.MaterialTextView>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mobile Number"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/lato_bold"
        app:layout_constraintStart_toStartOf="@id/mobileNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginText"

        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/mobileNumber"
        android:layout_width="336dp"
        android:layout_height="55dp"
        android:layout_marginTop="80dp"
        android:background="@color/white"
        android:fontFamily="@font/lato_light"
        android:padding="16dp"
        android:hint="Mobile Number"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginText" >

    </com.google.android.material.textfield.TextInputEditText>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Password"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/lato_bold"
        app:layout_constraintStart_toStartOf="@id/passwordAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mobileNumber"
        />
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/passwordAddress"
        android:layout_width="336dp"
        android:padding="16dp"
        android:layout_height="55dp"
        android:layout_marginTop="45dp"
        android:background="@color/white"
        android:fontFamily="@font/lato_light"
        android:textColorHint="@color/black"
        android:hint="@string/Password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mobileNumber" >

    </com.google.android.material.textfield.TextInputEditText>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginButton"
        android:layout_width="336dp"
        android:layout_height="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/buttonColors"
        android:layout_marginTop="75dp"
        android:text="@string/Login"
        app:layout_constraintTop_toBottomOf="@id/passwordAddress"
        />





</androidx.constraintlayout.widget.ConstraintLayout>